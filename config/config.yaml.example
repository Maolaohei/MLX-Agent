# MLX-Agent Configuration Template

name: "MLX-Agent"
version: "0.1.0"
debug: false

# Performance optimization
performance:
  use_uvloop: true
  json_library: orjson
  max_workers: 10

# Memory system (index1-based, BM25 + Vector hybrid search)
memory:
  # Storage paths
  path: ./memory
  index_path: ./memory/.index
  
  # Embedding model (via Ollama)
  embedding_model: bge-m3
  ollama_url: http://localhost:11434
  
  # Indexing options
  force_reindex: false
  index_on_startup: true

# Platform configuration
platforms:
  telegram:
    enabled: false
    # bot_token: "YOUR_BOT_TOKEN_HERE"
    # webhook_url: "https://your-domain.com/webhook"
    
  qqbot:
    enabled: false
    # api_id: "YOUR_API_ID"
    # api_hash: "YOUR_API_HASH"
    
  discord:
    enabled: false
    # bot_token: "YOUR_BOT_TOKEN_HERE"

# LLM configuration
llm:
  provider: openai
  # api_key: "YOUR_API_KEY_HERE"
  # api_base: "https://api.openai.com/v1"
  model: gpt-4o-mini
  temperature: 0.7
  max_tokens: 2000
